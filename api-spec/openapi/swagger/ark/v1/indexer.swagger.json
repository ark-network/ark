    "/v1/commitmentTx/{txid}/swept": {
      "get": {
        "summary": "GetSweptCommitmentTx returns the list of transaction (txid) that swept each batch output\nof the specified commitment transaction.\nIn most cases the list contains only one txid per batch, that means the funds locked in the\nbatch output have been claimed back.\nIf any of the leaves of the tree (vtxo) have been unrolled onchain before the expiration, the\nlist will contain many txids.\nIn a binary tree with 4 or more leaves, 1 unroll causes the server to broadcast 3 txs to sweep\nthe whole tree for example.\nIf a whole vtxo tree has been unrolled onchain, the list of txids for that batch output is be\nempty.",
        "operationId": "IndexerService_GetSweptCommitmentTx",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/v1GetSweptCommitmentTxResponse"
            }
          },
          "default": {
